<h1>Hi, <%= @user.first_name %>!</h1>
<h2>The following are the events that you've created</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Date</th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.name, event %></td>
      <td><%= event.description %></td>
      <td><%= event.date %></td>
    </tr>
  <% end %>
</table>

